{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "theme": "minimal",
    "moduleResolution": "node",
    "readme": "./README.md",
    "excludePrivate": true,
    "exclude": [
      "**/*+(.test).ts",
      "**/cli.ts"
    ]
  }
}